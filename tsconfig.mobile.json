{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["./src/core/*"],
      "@shared/*": ["./src/shared/*"],
      "@mobile/*": ["./src/mobile/*"]
    }
  },
  "include": [
    "src/core/**/*.ts",
    "src/shared/**/*.ts",
    "src/mobile/**/*.ts",
    "src/mobile/**/*.tsx",
    "App.tsx"
  ]
}
